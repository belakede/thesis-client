<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import org.controlsfx.glyphfont.Glyph?>
<fx:root xmlns:fx="http://javafx.com/fxml" type="javafx.scene.layout.StackPane" fx:id="parent"
         fx:controller="me.belakede.thesis.client.boundary.javafx.control.controller.ChatPaneController"
         stylesheets="@/me/belakede/thesis/client/boundary/javafx/css/chat.css" styleClass="chat-container">
    <AnchorPane>
        <Circle fx:id="notification" visible="false" radius="7" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="15"/>
    </AnchorPane>
    <Button styleClass="chat-button" fx:id="chatButton">
        <graphic>
            <Glyph fontFamily="FontAwesome" icon="COMMENTS" fontSize="48"/>
        </graphic>
    </Button>
</fx:root>