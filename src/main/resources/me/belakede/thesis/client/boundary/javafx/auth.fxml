<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.NotificationPane?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:id="parent"
      fx:controller="me.belakede.thesis.client.boundary.javafx.controller.AuthController">
    <NotificationPane fx:id="notificationPane">
        <content>
            <GridPane styleClass="login-frame" stylesheets="@css/auth.css"
                      alignment="center" hgap="10" vgap="10">
                <padding>
                    <Insets top="25" right="25" bottom="10" left="25"/>
                </padding>
                <Text text="Welcome" styleClass="welcome-text" GridPane.columnIndex="0" GridPane.rowIndex="0"
                      GridPane.columnSpan="2"/>
                <Label text="Server address: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="serverAddress" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <Button text="Sign In" onAction="#submit"/>
                </HBox>
            </GridPane>
        </content>
    </NotificationPane>
</VBox>