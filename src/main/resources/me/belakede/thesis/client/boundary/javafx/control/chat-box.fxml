<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>
<fx:root xmlns:fx="http://javafx.com/fxml" type="javafx.scene.layout.BorderPane" stylesheets="@../css/chat.css"
         minWidth="250" maxWidth="250" prefWidth="250" minHeight="400" maxHeight="400" prefHeight="400"
         styleClass="chat-box">
    <center>
        <ScrollPane fx:id="scrollPane" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" minWidth="250" maxWidth="250">
            <VBox fx:id="messageContainer" styleClass="message-container" spacing="10"/>
        </ScrollPane>
    </center>
    <bottom>
        <HBox styleClass="message-composer">
            <TextArea maxHeight="60" minHeight="60" maxWidth="200" minWidth="200" fx:id="textArea"/>
            <Button>
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="SEND" fontSize="20"/>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</fx:root>