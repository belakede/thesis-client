<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" stylesheets="@css/game.css"
            fx:controller="me.belakede.thesis.client.boundary.javafx.controller.GameController">
    <top>
        <Label text="It's the game!"></Label>
    </top>
    <center>
        <TilePane styleClass="board-container" fx:id="boardPane" minWidth="409" maxWidth="409" minHeight="409"
                  maxHeight="409" />
    </center>
    <bottom>
        <StackPane minHeight="45" maxHeight="45" prefHeight="45">
            <children>
                <HBox>
                    <AnchorPane styleClass="card-container" prefHeight="100" fx:id="cardContainer"/>
                    <VBox styleClass="slider-container">
                        <HBox>
                            <Slider min="-40" max="40" showTickMarks="true" value="1" fx:id="sliderHorizontal"/>
                            <Label fx:id="sliderHorizontalLabel"/>
                        </HBox>
                        <HBox>
                            <Slider min="-40" max="40" showTickMarks="true" value="1" fx:id="sliderVertical"/>
                            <Label fx:id="sliderVerticalLabel"/>
                        </HBox>
                        <HBox>
                            <Slider min="-90" max="90" showTickMarks="true" value="14" fx:id="sliderTheThirdOne"/>
                            <Label fx:id="sliderTheThirdOneLabel"/>
                        </HBox>
                    </VBox>
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>