<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import me.belakede.thesis.client.boundary.javafx.control.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" stylesheets="@css/game.css"
            fx:controller="me.belakede.thesis.client.boundary.javafx.controller.GameController">
    <top>
        <Label text="It's the game!"></Label>
    </top>
    <center>
        <TilePane styleClass="board-container" fx:id="boardPane" minWidth="405" maxWidth="405" minHeight="405"
                  maxHeight="405"/>
    </center>
    <bottom>
        <StackPane minHeight="45" maxHeight="45" prefHeight="45">
            <children>
                <HBox>
                    <AnchorPane styleClass="card-container" prefHeight="100">
                        <CardPane AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="0" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="60" AnchorPane.bottomAnchor="-10" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="110" AnchorPane.bottomAnchor="-5" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="160" AnchorPane.bottomAnchor="5" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="210" AnchorPane.bottomAnchor="-5" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="260" AnchorPane.bottomAnchor="-10" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="310" AnchorPane.bottomAnchor="0" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="360" AnchorPane.bottomAnchor="-5" onMouseEntered="#toFront"/>
                        <CardPane AnchorPane.leftAnchor="410" AnchorPane.bottomAnchor="0" onMouseEntered="#toFront"/>
                    </AnchorPane>
                    <VBox styleClass="slider-container">
                        <HBox>
                            <Slider min="-40" max="40" showTickMarks="true" value="1" fx:id="sliderHorizontal"/>
                            <Label fx:id="sliderHorizontalLabel"/>
                        </HBox>
                        <HBox>
                            <Slider min="-40" max="40" showTickMarks="true" value="1" fx:id="sliderVertical"/>
                            <Label fx:id="sliderVerticalLabel"/>
                        </HBox>
                        <HBox>
                            <Slider min="-90" max="90" showTickMarks="true" value="14" fx:id="sliderTheThirdOne"/>
                            <Label fx:id="sliderTheThirdOneLabel"/>
                        </HBox>
                    </VBox>
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>