<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" stylesheets="@css/game.css"
            fx:controller="me.belakede.thesis.client.boundary.javafx.controller.GameController">
    <top>
        <Label text="It's the game!"></Label>
    </top>
    <center>
        <TilePane styleClass="board-container" fx:id="boardPane" minWidth="405" maxWidth="405" minHeight="405"
                  maxHeight="405"/>
    </center>
    <bottom>
        <StackPane minHeight="45" maxHeight="45" prefHeight="45">
            <children>
                <HBox>
                    <HBox styleClass="card-container">
                        <StackPane styleClass="card, first">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 1</Text>
                        </StackPane>
                        <StackPane styleClass="card, second">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 2</Text>
                        </StackPane>
                        <StackPane styleClass="card, third">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 3</Text>
                        </StackPane>
                        <StackPane styleClass="card, fourth">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 4</Text>
                        </StackPane>
                        <StackPane styleClass="card, fifth">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 5</Text>
                        </StackPane>
                        <StackPane styleClass="card, sixth">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 6</Text>
                        </StackPane>
                        <StackPane styleClass="card, seventh">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 7</Text>
                        </StackPane>
                        <StackPane styleClass="card, eighth">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 8</Text>
                        </StackPane>
                        <StackPane styleClass="card, ninth">
                            <Rectangle width="75" height="125"/>
                            <Text>Card 9</Text>
                        </StackPane>
                    </HBox>
                    <VBox styleClass="slider-container">
                        <HBox>
                            <Slider min="-40" max="40" showTickMarks="true" value="1" fx:id="sliderHorizontal"/>
                            <Label fx:id="sliderHorizontalLabel"/>
                        </HBox>
                        <HBox>
                            <Slider min="-40" max="40" showTickMarks="true" value="1" fx:id="sliderVertical"/>
                            <Label fx:id="sliderVerticalLabel"/>
                        </HBox>
                        <HBox>
                            <Slider min="-90" max="90" showTickMarks="true" value="14" fx:id="sliderTheThirdOne"/>
                            <Label fx:id="sliderTheThirdOneLabel"/>
                        </HBox>
                    </VBox>
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>