<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.control.Label?>
<BorderPane fx:controller="me.belakede.thesis.client.boundary.javafx.chat.ChatBoxController" xmlns:fx="http://javafx.com/fxml" stylesheets="@/css/chat.css">
    <center>
        <ScrollPane vbarPolicy="NEVER" hbarPolicy="NEVER" minWidth="220" fx:id="scrollPane">
            <VBox fx:id="messageContainer">
                <VBox styleClass="message-container" prefWidth="220" minWidth="220" maxWidth="220">
                    <Label styleClass="message-sender">adam @ 17:20</Label>
                    <Label styleClass="message-content" wrapText="true">message message message message message message message</Label>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <TextField fx:id="messageField" onAction="#send"></TextField>
    </bottom>
</BorderPane>