<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="me.belakede.thesis.client.boundary.javafx.chat.controller.ChatBoxController"
            stylesheets="@/css/chat.css">
    <center>
        <ScrollPane vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" minWidth="220" fx:id="scrollPane">
            <VBox fx:id="messageContainer"/>
        </ScrollPane>
    </center>
    <bottom>
        <TextField fx:id="messageField" onAction="#send"></TextField>
    </bottom>
</BorderPane>